<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/tv_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Q. Condition of Engine ?"
        android:textSize="16dp"
        android:fontFamily="@font/zonapro_semibold"
        android:textColor="@color/black">

    </TextView>
    <ImageView
        android:id="@+id/iv_translate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/tv_questions"
        android:src="@drawable/speaker_orange">

    </ImageView>
    <RelativeLayout
        android:id="@+id/rl_answers_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_questions"
        android:layout_marginTop="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_answerslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/rl_answers_list"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2px"
        android:background="@color/lightgrey">
    </View>
</RelativeLayout>