<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCarFuelMnf"
    android:background="@color/lightorange"
    android:elevation="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <ImageView
                    android:id="@+id/go_back_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back_black">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/zonapro_regular"
                    android:gravity="center"
                    android:text="More Info"
                    android:textColor="@color/black"
                    android:textSize="18dp">

                </TextView>
            </RelativeLayout>
            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/rl_header"
                android:background="@color/lightorange">
            </View>
            <TextView
                android:id="@+id/label_fueltype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/zonapro_bold"
                android:text="Select Fuel type"
                android:textColor="@color/black"
                android:textSize="16dp">

            </TextView>
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_fueltype"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_petrol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:onClick="onpetrolselect"
                    android:background="@drawable/cardview_lightorange_margined"
                    >
                    <ImageView
                        android:id="@+id/iv_petrol"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_white"
                        android:padding="5dp"
                        android:src="@drawable/petrol_icon">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_petrol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_petrol"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:gravity="center"
                        android:text="Petrol"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_diesel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:onClick="ondieselselect"
                    android:background="@drawable/cardview_lightorange_margined"
                    >
                    <ImageView
                        android:id="@+id/iv_disel"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_white"
                        android:padding="5dp"
                        android:src="@drawable/diesel_icon">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_disel"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:gravity="center"
                        android:text="Diesel"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/label_transtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/zonapro_bold"
                android:text="Select Transmission type"
                android:textColor="@color/black"
                android:textSize="16dp">

            </TextView>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_transtype"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_manual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onmanualselect"
                    android:background="@drawable/cardview_lightorange_margined"
                    >
                    <ImageView
                        android:id="@+id/iv_manual"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_white"
                        android:padding="5dp"
                        android:src="@drawable/gear_icon">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_manual"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:gravity="center"
                        android:text="Manual"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onautoselect"
                    android:background="@drawable/cardview_lightorange_margined"
                    >
                    <ImageView
                        android:id="@+id/iv_auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_white"
                        android:padding="5dp"
                        android:src="@drawable/auto_icon">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_auto"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:gravity="center"
                        android:text="Automatic"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_manufacture_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/linear2"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/zonapro_semibold"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Manufacturing Year"
                    android:textColor="@color/black"
                    android:textSize="16dp">
                </TextView>

                <EditText
                    android:id="@+id/selected_manufacture_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/tv_year"
                    android:fontFamily="@font/zonapro_regular"
                    android:inputType="number"
                    android:gravity="start"
                    android:background="@null"
                    android:hint="  eg: 2015"
                    android:textColor="@color/black"
                    android:textSize="16dp">
                </EditText>
                <View
                    android:id="@+id/line_view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/selected_manufacture_year"
                    android:background="@color/lightorange">
                </View>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_kmsdriven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rl_manufacture_year"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tv_kms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/zonapro_semibold"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="KMS driven"
                    android:textColor="@color/black"
                    android:textSize="16dp">
                </TextView>

                <EditText
                    android:id="@+id/selected_kms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/tv_kms"
                    android:fontFamily="@font/zonapro_regular"
                    android:inputType="number"
                    android:gravity="start"
                    android:background="@null"
                    android:hint="  eg: 1,00,000"
                    android:textColor="@color/black"
                    android:textSize="16dp">
                </EditText>
                <View
                    android:id="@+id/line_view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/selected_kms"
                    android:background="@color/lightorange">
                </View>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_kmsdriven"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:backgroundTint="@color/orange"
                android:background="@drawable/cardview_dealership"
                android:fontFamily="@font/zonapro_semibold"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="18dp"
                >

            </TextView>
            <!--<TextView
                android:visibility="gone"
                android:id="@+id/tv_submit_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_budget"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="SUBMIT REQUEST"
                android:textSize="14dp"
                android:fontFamily="@font/zonapro_semibold"
                android:textColor="@color/blue">

            </TextView>-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>