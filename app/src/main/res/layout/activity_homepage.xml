<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/zonapro_semibold"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="Logout"
        android:textColor="@color/lightorange"
        android:textSize="18dp">
    </TextView>
    <TextView

        android:id="@+id/tv_selected_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/zonapro_semibold"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="Select Language"
        android:textColor="@color/orange"
        android:textSize="18dp">
    </TextView>
    <TextView
        android:id="@+id/start_inspection"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:backgroundTint="@color/orange"
        android:background="@drawable/cardview_lightgrey_margined"
        android:fontFamily="@font/zonapro_semibold"
        android:gravity="center"
        android:text="START INSPECTION"
        android:textColor="@color/white"
        android:textSize="25dp"
        >
    </TextView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_translate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/translate_icon">

    </ImageView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_record"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/iv_translate"
        android:layout_margin="10dp"
        android:src="@drawable/mic_orange">

    </ImageView>
    <RelativeLayout
       android:visibility="gone"
        android:id="@+id/rl_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/transparent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_above="@+id/cv_enter_dealer_deatisl">

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_enter_dealer_deatisl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <RelativeLayout

                        android:id="@+id/rl_dealername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        >
                        <TextView
                            android:id="@+id/tv_dealer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/zonapro_semibold"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Enter Dealer"
                            android:textColor="@color/lightorange"
                            android:textSize="16dp">
                        </TextView>

                        <EditText
                            android:id="@+id/selected_dealer"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:maxLines="1"
                            android:layout_toLeftOf="@+id/iv_mic"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_below="@+id/tv_dealer_name"
                            android:fontFamily="@font/zonapro_regular"
                            android:gravity="start"
                            android:background="@null"
                            android:textColor="@color/lightorange"
                            android:textSize="16dp">
                        </EditText>
                        <ImageView

                            android:id="@+id/iv_mic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_dealer_name"
                            android:src="@drawable/mic_orange">

                        </ImageView>
                        <View
                            android:id="@+id/line_view1"
                            android:layout_width="match_parent"
                            android:layout_height="0.5px"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_below="@+id/selected_dealer"
                            android:background="@color/orange">
                        </View>
                    </RelativeLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/noresults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/zonapro_semibold"
                        android:layout_below="@+id/rl_dealername"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:hint="No Results Found"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/lightorange"
                        android:textSize="16dp">

                    </TextView>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_dealerlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noresults"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_dealer_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>
                    <RelativeLayout

                        android:id="@+id/rl_veh_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/rl_dealerlist"
                        >
                        <TextView
                            android:id="@+id/tv_veh_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/zonapro_semibold"
                            android:gravity="center"
                            android:text="Enter Vehicle Number"
                            android:textColor="@color/lightorange"
                            android:textSize="16dp">
                        </TextView>
                        <EditText
                            android:id="@+id/selected_vehno"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                            android:capitalize="characters"
                            android:inputType="textCapCharacters"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_below="@+id/tv_veh_no"
                            android:fontFamily="@font/zonapro_regular"
                            android:gravity="start"
                            android:background="@null"
                            android:textColor="@color/lightorange"
                            android:textSize="16dp">
                        </EditText>
                        <!--<EditText
                            android:id="@+id/selected_insurance_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:inputType="text"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_below="@+id/tv_insurance_type"
                            android:fontFamily="@font/zonapro_regular"
                            android:gravity="start"
                            android:background="@null"
                            android:hint="eg: Comprehensive Standard"
                            android:textColor="@color/black"
                            android:textSize="16dp">
                        </EditText>-->
                        <View
                            android:id="@+id/line_view2"
                            android:layout_width="match_parent"
                            android:layout_height="0.5px"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_below="@+id/selected_vehno"
                            android:background="@color/orange">
                        </View>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/submit_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_veh_no"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:layout_marginRight="40dp"
                        android:backgroundTint="@color/lightorange"
                        android:background="@drawable/cardview_dealership"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="SUBMIT"
                        android:textColor="@color/white">
                    </TextView>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_inspect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_transparent_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cv_activation_code1"
            android:background="#80000000">

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_activation_code1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:gravity="center"
                        android:textColor="#00C42E"
                        android:text="Status"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/status"
                        android:text="Inspection Completed "
                        android:fontFamily="@font/zonapro_regular"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="18dp">

                    </TextView>

                    <TextView
                        android:id="@+id/reinspect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:padding="8dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:layout_marginRight="20dp"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/orange"
                        android:background="@drawable/cardview_dealership"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="Reinspect"
                        android:textColor="@color/white">

                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_addcar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_transparent_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cv_addcar"
            android:background="#80000000">

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_addcar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/status1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:gravity="center"
                        android:textColor="#00C42E"
                        android:text="Status"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/status1"
                        android:text="Vehicle not added"
                        android:fontFamily="@font/zonapro_regular"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="18dp">

                    </TextView>

                    <TextView
                        android:id="@+id/add_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:padding="8dp"
                        android:fontFamily="@font/zonapro_semibold"
                        android:layout_marginRight="20dp"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/orange"
                        android:background="@drawable/cardview_dealership"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="ADD CAR"
                        android:textColor="@color/white">

                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_language"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/transparent_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_above="@+id/cv_lang_list">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cv_lang_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/text_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/zonapro_semibold"
                android:gravity="center"
                android:text="Select Language"
                android:textColor="@color/orange"
                android:textSize="18dp">

            </TextView>
            <RelativeLayout

                android:layout_margin="10dp"
                android:id="@+id/rl_languagelist"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/text_heading"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_language_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>